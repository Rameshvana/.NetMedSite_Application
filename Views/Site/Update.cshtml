@model MvcLightphrm_Prject.Models.Site.Site

@{
    ViewData["Title"] = "Update Site";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 700px;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0" style="text-align:center"> Update new Site</h4>
        </div>
        <div class="card-body">
            
            <form asp-action="UpdateSite" asp-controller="Site" method="post" novalidate>

                <input asp-for="SiteId" class="form-control" placeholder="Enter site name" />

                <div class="mb-3">
                    <label asp-for="SiteName" class="form-label fw-semibold"></label>
                    <input asp-for="SiteName" class="form-control" placeholder="Enter site name" />
                    <span asp-validation-for="SiteName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <input asp-for="Description" class="form-control" placeholder="Enter description" />
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-semibold"></label>
                    <input asp-for="Address" class="form-control" placeholder="Enter address" />
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SiteCode" class="form-label fw-semibold"></label>
                    <input asp-for="SiteCode" class="form-control" placeholder="Enter Sitecode" />
                    <span asp-validation-for="SiteCode" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SiteType" class="form-label fw-semibold"></label>
                    <input asp-for="SiteType" class="form-control" placeholder="Enter Sitetype" />
                    <span asp-validation-for="SiteType" class="text-danger small"></span>
                </div>

                <div class="d-flex mt-3">
                    <button type="submit" class="btn btn-success"> Update </button>
                    <a asp-action="Index" asp-controller="Site" class="btn btn-secondary" style="margin-left:15px;"> back to site</a>

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
