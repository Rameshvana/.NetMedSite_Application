@{
    ViewData["Title"] = "Admin Home";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="mb-4 text-success">Welcome, Admin!</h2>

        <div class="row justify-content-center">
            <div class="col-md-3">
                <a asp-controller="Site" asp-action="Site" class="btn btn-primary w-100 mb-3">
                    Manage Sites
                </a>
            </div>
            <div class="col-md-3">
                <a asp-controller="Product" asp-action="Product" class="btn btn-info w-100 mb-3">
                     Manage Products
                </a>
            </div>
            <div class="col-md-3">
                <a asp-controller="User" asp-action="User" class="btn btn-warning w-100 mb-3">
                     Manage Users
                </a>
            </div>
            <div class="col-md-3">
                <a asp-controller="Calendar" asp-action="OpenCalendar" class="btn btn-info w-100 mb-3">
                    Open Calendar
                </a>
            </div>
        </div>

        <a asp-controller="Admin" asp-action="LogoutAdmin" class="btn btn-danger mt-4"
           onclick="return confirm('Are you sure you want to logout?');">
             Logout
        </a>
    </div>
</div>
